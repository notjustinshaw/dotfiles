# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias cler="clear"
alias clar="clear"
alias c="clear"

# git
alias ga="git add --all"
alias gp="git push"

gc() {
  git commit -m "$*"
}

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include extract script
if [[ -f ~/.dotfiles/extract ]]; then
  source ~/.dotfiles/extract
fi

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
